<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape">
        <TextView
            android:id="@+id/judul_tasklabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul Task"
            android:layout_marginBottom="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/jumlah_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Task"
            android:layout_marginBottom="10dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/textlines_top"
            />
        <LinearLayout
            android:columnCount="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/button_view_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:textColor="#918888"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_remove_red_eye_24"
                android:drawableTint="#918888"
                android:minHeight="2dp"
                android:backgroundTint="#FFFFFF"/>
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/textlines_left"
                />
            <Button
                android:id="@+id/button_edit_tasklabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="#918888"
                android:textStyle="bold"
                android:minHeight="2dp"
                android:drawableLeft="@drawable/baseline_edit_24"
                android:drawableTint="#918888"
                android:backgroundTint="#FFFFFF"/>
            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@drawable/textlines_left"
                />
            <Button
                android:id="@+id/button_delete_tasklabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:minHeight="2dp"
                android:textColor="#F31111"
                android:textStyle="bold"
                android:drawableLeft="@drawable/baseline_delete_24"
                android:drawableTint="#F31111"
                android:backgroundTint="#FFFFFF"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
